---
export interface Props {
    slide1: string;
    slide2: string;
    slide3: string;
}

const {slide1, slide2, slide3} = Astro.props as Props;
---

<div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button
            type="button"
            data-bs-target="#myCarousel"
            data-bs-slide-to="0"
            class="active"
            aria-current="true"
            aria-label="Slide 1"></button>
        <button
            type="button"
            data-bs-target="#myCarousel"
            data-bs-slide-to="1"
            aria-label="Slide 2"></button>
        <button
            type="button"
            data-bs-target="#myCarousel"
            data-bs-slide-to="2"
            aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <svg
                class="bd-placeholder-img"
                width="100%"
                height="100%"
                xmlns="http://www.w3.org/2000/svg"
                aria-hidden="true"
                preserveAspectRatio="xMidYMid slice"
                focusable="false"
            >
            </svg>
            <img class="img-fluid" src={slide1} alt="First slide" />

            <div class="container">
                <div class="carousel-caption text-start text-secondary">
                    <h1 class="text-primary">LC'M Color Zen</h1>
                    <p class="text-primary fw-bolder">
                        Votre coiffeuse et visagiste Ã  domicile
                    </p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <svg
                class="bd-placeholder-img"
                width="100%"
                height="100%"
                xmlns="http://www.w3.org/2000/svg"
                aria-hidden="true"
                preserveAspectRatio="xMidYMid slice"
                focusable="false"
            >
            </svg>
            <img class="img-fluid" src={slide2} alt="Second slide" />

            <div class="container">
                <div class="carousel-caption text-secondary">
                    <h1 class="text-primary">LC'M Color Zen</h1>
                    <p class="text-primary fw-bolder">Coloriste Visagiste</p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <svg
                class="bd-placeholder-img"
                width="100%"
                height="100%"
                xmlns="http://www.w3.org/2000/svg"
                aria-hidden="true"
                preserveAspectRatio="xMidYMid slice"
                focusable="false"
            >
            </svg>
            <img class="img-fluid" src={slide3} alt="Third slide" />

            <div class="container">
                <div class="carousel-caption text-end text-secondary">
                    <h1 class="text-primary">LC'M Color Zen</h1>
                    <p class="text-primary fw-bolder">Soin visage LHL</p>
                </div>
            </div>
        </div>
    </div>
    <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#myCarousel"
        data-bs-slide="prev"
    >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#myCarousel"
        data-bs-slide="next"
    >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<script src="/bootstrap/bootstrap.bundle.min.js" is:inline></script>
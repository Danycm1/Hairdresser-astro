---
export interface Props {
    slide1: string;
    slide2: string;
    slide3: string;
    titleSlide1: string;
    descriptionSlide1: string;
    titleSlide2: string;
    descriptionSlide2: string;
    titleSlide3: string;
    descriptionSlide3: string;
}

const {
    slide1,
    slide2,
    slide3,
    titleSlide1,
    titleSlide2,
    titleSlide3,
    descriptionSlide1,
    descriptionSlide2,
    descriptionSlide3,
} = Astro.props as Props;
---

<div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button
            type="button"
            data-bs-target="#myCarousel"
            data-bs-slide-to="0"
            class="active"
            aria-current="true"
            aria-label="Slide 1"></button>
        <button
            type="button"
            data-bs-target="#myCarousel"
            data-bs-slide-to="1"
            aria-label="Slide 2"></button>
        <button
            type="button"
            data-bs-target="#myCarousel"
            data-bs-slide-to="2"
            aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="img-fluid" src={slide1} alt="First slide" />

            <div class="container">
                <div class="carousel-caption text-start text-secondary">
                    <h1 class="text-primary">{titleSlide1}</h1>
                    <p class="text-primary fw-bolder">
                        {descriptionSlide1}
                    </p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="img-fluid" src={slide2} alt="Second slide" />

            <div class="container">
                <div class="carousel-caption text-secondary">
                    <h1 class="text-primary">{titleSlide2}</h1>
                    <p class="text-primary fw-bolder">{descriptionSlide2}</p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="img-fluid" src={slide3} alt="Third slide" />

            <div class="container">
                <div class="carousel-caption text-end text-secondary">
                    <h1 class="text-primary">{titleSlide3}</h1>
                    <p class="text-primary fw-bolder">{descriptionSlide3}</p>
                </div>
            </div>
        </div>
    </div>
    <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#myCarousel"
        data-bs-slide="prev"
    >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#myCarousel"
        data-bs-slide="next"
    >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
